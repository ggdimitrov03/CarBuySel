@model CreateCarListingViewModel
@{
    ViewData["Title"] = "Нова обява";
}

<section class="form-header">
    <h1 class="display-5 text-danger mb-3">Добавете автомобил</h1>
    <p class="text-muted">
        Споделете най-важното, качете снимки и публикувайте веднага. Всяка обява е свързана с профила ви и удостоверена за купувачите.
    </p>
</section>

<section class="glass-card p-4 mb-5">
    <form asp-action="Create" method="post" class="row g-4" enctype="multipart/form-data">
        <div class="col-md-6">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control form-control-lg" />
            <span asp-validation-for="Title" class="text-danger small"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="Make" class="form-label"></label>
            <input asp-for="Make" class="form-control form-control-lg" />
            <span asp-validation-for="Make" class="text-danger small"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="Model" class="form-label"></label>
            <input asp-for="Model" class="form-control form-control-lg" />
            <span asp-validation-for="Model" class="text-danger small"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="Year" class="form-label"></label>
            <input asp-for="Year" class="form-control form-control-lg" />
            <span asp-validation-for="Year" class="text-danger small"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="Price" class="form-label"></label>
            <div class="input-group input-group-lg">
                <span class="input-group-text">€</span>
                <input asp-for="Price" class="form-control" />
            </div>
            <span asp-validation-for="Price" class="text-danger small"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="ImageUploads" class="form-label"></label>
            <input asp-for="ImageUploads" class="form-control form-control-lg" type="file" accept="image/*" multiple />
            <small class="text-muted d-block mt-2">Качете до 10 JPG/PNG файла с високо качество.</small>
            <span asp-validation-for="ImageUploads" class="text-danger small"></span>
        </div>
        <div class="col-12">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" rows="6" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger small"></span>
        </div>
        <div class="col-12">
            <h2 class="h5 text-emerald mt-3">Спецификации</h2>
            <p class="text-muted">Попълнете най-важните технически детайли.</p>
        </div>
        <div class="col-md-3">
            <label asp-for="SpecEngine" class="form-label"></label>
            <input asp-for="SpecEngine" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="SpecPower" class="form-label"></label>
            <input asp-for="SpecPower" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="SpecEconomy" class="form-label"></label>
            <input asp-for="SpecEconomy" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="SpecTransmission" class="form-label"></label>
            <input asp-for="SpecTransmission" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="SpecExterior" class="form-label"></label>
            <input asp-for="SpecExterior" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="SpecInterior" class="form-label"></label>
            <input asp-for="SpecInterior" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="SpecAssist" class="form-label"></label>
            <input asp-for="SpecAssist" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="SpecConnectivity" class="form-label"></label>
            <input asp-for="SpecConnectivity" class="form-control" />
        </div>

        <div class="col-12 mt-3">
            <h2 class="h5 text-emerald">История и поддръжка</h2>
        </div>
        <div class="col-md-4">
            <label asp-for="History1Title" class="form-label"></label>
            <input asp-for="History1Title" class="form-control" />
            <label asp-for="History1Subtitle" class="form-label mt-2"></label>
            <input asp-for="History1Subtitle" class="form-control" />
            <label asp-for="History1Date" class="form-label mt-2"></label>
            <input asp-for="History1Date" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="History2Title" class="form-label"></label>
            <input asp-for="History2Title" class="form-control" />
            <label asp-for="History2Subtitle" class="form-label mt-2"></label>
            <input asp-for="History2Subtitle" class="form-control" />
            <label asp-for="History2Date" class="form-label mt-2"></label>
            <input asp-for="History2Date" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="History3Title" class="form-label"></label>
            <input asp-for="History3Title" class="form-control" />
            <label asp-for="History3Subtitle" class="form-label mt-2"></label>
            <input asp-for="History3Subtitle" class="form-control" />
            <label asp-for="History3Date" class="form-label mt-2"></label>
            <input asp-for="History3Date" class="form-control" />
        </div>

        <div class="col-12 mt-3">
            <h2 class="h5 text-emerald">Проверки и състояние</h2>
            <p class="text-muted">Избройте най-важните точки от инспекцията.</p>
        </div>
        <div class="col-md-6">
            <label asp-for="Condition1" class="form-label"></label>
            <input asp-for="Condition1" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="Condition2" class="form-label"></label>
            <input asp-for="Condition2" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="Condition3" class="form-label"></label>
            <input asp-for="Condition3" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="Condition4" class="form-label"></label>
            <input asp-for="Condition4" class="form-control" />
        </div>

        <div class="col-12 d-flex justify-content-between align-items-center">
            <a asp-action="Index" class="btn btn-outline-light">Отказ</a>
            <button type="submit" class="btn btn-danger btn-lg">Публикувай</button>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

