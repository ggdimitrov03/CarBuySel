@model RegisterViewModel
@{
    ViewData["Title"] = "Създаване на профил";
}

<section class="auth-card neon-border">
    <div class="row g-4 align-items-center flex-row-reverse">
        <div class="col-md-6">
            <h1 class="display-6 mb-3">Присъединете се към <span class="text-light">Car</span><span class="text-emerald">Buy</span><span class="text-danger">Sell</span></h1>
            <p class="text-muted">
                Публикувайте обяви за минути, управлявайте запитвания и получавайте актуални данни за всяка марка и модел.
            </p>
            <ul class="check-list">
                <li>Неограничен брой обяви</li>
                <li>Мощни филтри за търсене</li>
                <li>Съвременен неонов интерфейс</li>
            </ul>
        </div>
        <div class="col-md-6">
            <form asp-action="Register" method="post" class="glass-card p-4 rounded-4">
                <div class="mb-3">
                    <label asp-for="DisplayName" class="form-label"></label>
                    <input asp-for="DisplayName" class="form-control form-control-lg" autocomplete="name" />
                    <span asp-validation-for="DisplayName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control form-control-lg" autocomplete="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control form-control-lg" autocomplete="new-password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control form-control-lg" autocomplete="new-password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button class="btn btn-emerald btn-lg w-100 mb-3" type="submit">Създай профил</button>
                <div class="text-center">
                    <span class="text-muted">Вече имате профил?</span>
                    <a asp-action="Login" class="link-underline ms-1">Вход</a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

